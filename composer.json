{
  "name": "dfau/coding-standard",
  "description": "dfau coding standard",
  "license": "MIT",
  "authors": [
    {
      "name": "dfau",
      "email": "dev@dfau.de"
    }
  ],
  "require": {
    "php": "^7.3"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",

    "slevomat/coding-standard": "^7.0",
    "symplify/easy-coding-standard-prefixed": "^9.0",

    "rector/rector": "^0.13.2",
    "phpstan/phpstan-webmozart-assert": "^1.1.2",
    "friendsoftypo3/phpstan-typo3": "^0.9.0"
  },
  "bin": [
    "tools/typo3-typoscript-lint"
  ],
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
